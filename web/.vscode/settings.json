{
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
  },
  "workbench.colorTheme": "Omni",
  "explorer.compactFolders": false,
  "editor.indentSize": 2,
  "cSpell.words": [
    "montserrat",
    "oxanium"
  ]
}